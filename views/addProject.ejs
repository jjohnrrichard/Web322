<!DOCTYPE html>
<html lang="en" data-theme="forest">
<head>
  <meta charset="UTF-8">
  <title>Add Project</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
<%- include('partials/navbar', { page: '/solutions/addProject' }) %>

<div class="container mx-auto my-8 px-4">
  <div class="hero bg-base-200 rounded-lg p-10 mb-10">
    <div class="hero-content text-center">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold">Add Project</h1>
        <p class="py-4">Create a new climate project and assign it to a sector.</p>
      </div>
    </div>
  </div>

  <form method="POST" action="/solutions/addProject" class="bg-base-100 shadow-md rounded-lg p-8 space-y-6">
    <div>
      <label class="block text-sm font-semibold mb-1" for="title">Title</label>
      <input type="text" name="title" id="title" class="input input-bordered w-full" required>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="feature_img_url">Image URL</label>
      <input type="url" name="feature_img_url" id="feature_img_url" class="input input-bordered w-full" required>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="summary_short">Summary</label>
      <textarea name="summary_short" id="summary_short" class="textarea textarea-bordered w-full" required></textarea>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="intro_short">Intro</label>
      <textarea name="intro_short" id="intro_short" class="textarea textarea-bordered w-full" required></textarea>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="impact">Impact</label>
      <textarea name="impact" id="impact" class="textarea textarea-bordered w-full" required></textarea>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="original_source_url">Source URL</label>
      <input type="url" name="original_source_url" id="original_source_url" class="input input-bordered w-full" required>
    </div>

    <div>
      <label class="block text-sm font-semibold mb-1" for="sector_id">Sector</label>
      <select name="sector_id" id="sector_id" class="select select-bordered w-full" required>
        <% sectors.forEach(sector => { %>
         <option value="<%= sector.id %>"><%= sector.sector_name %></option>
        <% }) %>
      </select>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary px-8">Add Project</button>
    </div>
  </form>
</div>

</body>
</html>