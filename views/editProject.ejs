<!DOCTYPE html>
<html lang="en" data-theme="forest">
<head>
  <meta charset="UTF-8">
  <title>Edit Project</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
<%- include('partials/navbar', { page: '' }) %>

<div class="container mx-auto my-8 px-4">
  <!-- Hero -->
  <div class="hero bg-base-200 rounded-lg p-10 mb-10">
    <div class="hero-content text-center">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold">Edit Project: <%= project.title %></h1>
        <p class="py-4">Update this climate project and assign it to a sector.</p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <form action="/solutions/editProject" method="POST" class="bg-base-100 shadow-md rounded-lg p-8 space-y-6">
    <input type="hidden" name="id" value="<%= project.id %>">

    <div>
      <label class="block font-semibold mb-1">Title</label>
      <input type="text" name="title" value="<%= project.title %>" required class="input input-bordered w-full">
    </div>

    <div>
      <label class="block font-semibold mb-1">Image URL</label>
      <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required class="input input-bordered w-full">
    </div>

    <div>
      <label class="block font-semibold mb-1">Summary</label>
      <textarea name="summary_short" required class="textarea textarea-bordered w-full"><%= project.summary_short %></textarea>
    </div>

    <div>
      <label class="block font-semibold mb-1">Intro</label>
      <textarea name="intro_short" required class="textarea textarea-bordered w-full"><%= project.intro_short %></textarea>
    </div>

    <div>
      <label class="block font-semibold mb-1">Impact</label>
      <textarea name="impact" required class="textarea textarea-bordered w-full"><%= project.impact %></textarea>
    </div>

    <div>
      <label class="block font-semibold mb-1">Source URL</label>
      <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required class="input input-bordered w-full">
    </div>

    <div>
      <label class="block font-semibold mb-1">Sector</label>
      <select name="sector_id" required class="select select-bordered w-full">
        <% sectors.forEach(sector => { %>
          <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>>
            <%= sector.sector_name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-success px-8">Update Project</button>
      <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error ml-4">Delete Project</a>
    </div>
  </form>
</div>

</body>
</html>