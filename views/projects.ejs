<!DOCTYPE html>
<html lang="en" data-theme="forest">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects | Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>
<body>
<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<div class="container mx-auto my-8">
  <div class="hero bg-base-200 rounded-lg p-10 mb-6">
    <div class="hero-content text-center">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold">All Climate Projects</h1>
        <p class="py-4">Browse all climate solutions across sectors.</p>
        <a class="btn btn-primary" href="/solutions/addProject">Add New Project</a>
      </div>
    </div>
  </div>

  <% if (projects.length > 0) { %>
    <div class="overflow-x-auto">
      <table class="table w-full bg-base-100 rounded-lg shadow">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td class="font-semibold"><%= project.title %></td>
              <td><%= project.Sector.sector_name %></td>
              <td><%= project.summary_short.substring(0, 80) %>...</td>
              <td class="space-x-2">
                <a href="/solutions/editProject/<%= project.id %>" class="btn btn-xs btn-outline btn-warning">Edit</a>
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-xs btn-outline btn-error" onclick="return confirm('Are you sure you want to delete this project?');">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning mt-4">
      No projects found.
    </div>
  <% } %>
</div>

</body>
</html>
